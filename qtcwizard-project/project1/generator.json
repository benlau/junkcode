{
    "icon": "icon.png",
    "ignoreFilePattern": ["\\.swp$", "\\.DS_Store$"],
    "rules": [
        {
            "pattern": "project1.pro",
            "path": [
                {
                    "find": "project1.pro",
                    "replace": "%{ProFileName}"
                }
            ],
            "openAsProject": true
        },
        {
            "pattern": ".*",
            "content": [
                {
                    "find": "\\\\",
                    "replace": "\\\\"
                }
            ]
        }
    ]
}
